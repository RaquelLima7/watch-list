<div class="container mt-3">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h3><%= @list.name %> </h3> 
          <div class="mt-3">
        <%= link_to lists_path do %>
            <i class="fa fa-history"></i> Back to list
        <% end %>
        <%= link_to edit_list_path(@list) do %>
            <i class="fas fa-pencil-alt"></i> Edit this list
        <% end %>
         <%= link_to list_path(@list), method: :delete, data: { confirm: "Are you sure?"} do %>
            <i class="fa fa-trash"></i> Delete this list
        <% end %>
        </div>
   </div>
  </div>
</div>
